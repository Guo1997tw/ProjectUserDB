@model ProjectUserDB.Models.UserTable

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken() //防XSS、CSRF攻擊

        <div class="form-horizontal">
            <h4>UserTable</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.UserSex, htmlAttributes: new { @class = "control-label col-md-2" })
                <font color="red">(範例：男性 = M、女性 = F。)</font>
                <div class="col-md-10">
                    @Html.EditorFor(m => m.UserSex, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.UserSex, "", new { @class = "text-danger" })
                </div>
            </div>
            @*下拉式選單寫法*@
            @*<select><option value="男性">M</option><option value="女性">F</option></select>*@

            <div class="form-group">
                @Html.LabelFor(m => m.UserBirthDay, htmlAttributes: new { @class = "control-label col-md-2" })
                <font color="red">(範例：XXXX/XX/XX)</font>
                <div class="col-md-10">
                    @Html.EditorFor(m => m.UserBirthDay, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.UserBirthDay, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.UserMobilePhone, htmlAttributes: new { @class = "control-label col-md-2" })
                <font color="red">(範例：09XXXXXXXX)</font>
                <div class="col-md-10">
                    @Html.EditorFor(m => m.UserMobilePhone, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(m => m.UserMobilePhone, "", new { @class = "text-danger" })
                </div>
            </div> <br />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div> <br />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("返回", "UserTableList")
    </div>
</body>
</html>